{
  "name": "mattmanzi.com",
  "version": "3.5.0",
  "private": true,
  "scripts": {
    "build": "svelte-kit sync && vite build",
    "build:docker": "export IMAGE_NAME=\"ghcr.io/imyourmanzi/mattmanzi.com\"; docker build --platform linux/amd64,linux/arm64 --build-arg \"NODE_VERSION=$(cat .nvmrc | tr -cd '[:digit:].')\" -t \"$IMAGE_NAME:$npm_package_version\" -t \"$IMAGE_NAME:latest\" .",
    "dev": "vite dev",
    "preview": "vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "prettier --check . && eslint .",
    "format": "prettier --write ."
  },
  "devDependencies": {
    "@sveltejs/adapter-auto": "^3.1.1",
    "@sveltejs/adapter-static": "^3.0.1",
    "@sveltejs/kit": "^2.4.3",
    "@types/dompurify": "^3.0.5",
    "@typescript-eslint/eslint-plugin": "^8.4.0",
    "@typescript-eslint/parser": "^8.4.0",
    "dompurify": "^3.1.6",
    "eslint": "^9.9.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-svelte": "^2.35.1",
    "firebase-tools": "^13.0.3",
    "highlight.js": "^11.10.0",
    "marked": "^14.1.1",
    "marked-highlight": "^2.1.3",
    "prettier": "^3.2.4",
    "prettier-plugin-svelte": "^3.1.2",
    "svelte": "^4.2.9",
    "svelte-check": "^4.0.1",
    "tslib": "^2.4.1",
    "typescript": "^5.0.0",
    "vite": "^5.0.12"
  },
  "type": "module"
}
